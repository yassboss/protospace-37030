<div class="card">
    <%= link_to image_tag(prototype.image, class: :card__img ), "/prototypes/#{prototype.id}" %>
    <div class="card__body">
      <%= link_to prototype.title, "/prototypes/#{prototype.id}", class: :card__title%>
      <p class="card__summary">
        <%= prototype.catch_copy %>
      </p>
      <%= link_to "by #{prototype.user.name}", "/users/#{prototype.user_id}", class: :card__user %>
    </div>
</div>